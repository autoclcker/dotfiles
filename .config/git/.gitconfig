[user]
	name = autoclcker
[alias]
	lo = log --pretty=oneline --abbrev-commit
	alias = ! git config --get-regexp ^alias\\. | sed -e s/^alias\\.// -e s/\\ /\\ =\\ /
	sync = !git remote update origin --prune && git pull
	ops = "!a() { if [ \"$1\" = \"-s\" ] || [ \"$1\" = \"--scope\" ]; then local scope=\"$2\"; shift 2; git commit -m \"ops(${scope}): ${@}\"; else git commit -m \"ops: ${@}\"; fi }; a"
