# syntax=docker/dockerfile:1

ARG REGISTRY=docker.io/library
ARG OS_BASE=ubuntu
ARG OS_VERSION=22.04@sha256:0e5e4a57c2499249aafc3b40fcd541e9a456aab7296681a3994d631587203f97

# Download dependencies
FROM --platform=${BUILDPLATFORM} ${REGISTRY}/${OS_BASE}:${OS_VERSION} AS base

ARG UID=59999
ARG GID=59999
ARG USER=nonroot
ARG GROUP=nonroot
ARG HOME=/home/${USER}

ENV DEBIAN_FRONTEND=noninteractive
ENV INSTALL_DOCKER=false
ENV MISE_DISABLE_TOOLS="podman"
ENV TZ=Europe/Moscow

RUN <<EOF
addgroup --gid ${GID} ${GROUP}
adduser --disabled-password --gecos '' --home ${HOME} --shell /bin/bash --uid ${UID} --gid ${GID} ${USER}
EOF

RUN --mount=type=cache,target=/var/lib/apt,sharing=locked \
    --mount=type=cache,target=/var/cache/apt,sharing=locked \
    apt-get update && apt-get install --no-install-recommends --yes \
        apt-utils=2.4.13 \
        build-essential=12.9ubuntu3 \
        curl=7.81.0-1ubuntu1.20 \
        g++=4:11.2.0-1ubuntu1 \
        git=1:2.34.1-1ubuntu1.12 \
        jq=1.6-2.1ubuntu3 \
        make=4.3-4.1build1 \
        sudo=1.9.9-1ubuntu2.4 \
        tzdata=2024a-0ubuntu0.22.04.1 \
        unzip=6.0-26ubuntu3.2 \
        wget=1.21.2-2ubuntu1.1 \
        xdg-user-dirs=0.17-2ubuntu4 \
        && \
    printf '%s ALL=(ALL) NOPASSWD:ALL\n' "${USER}" >> /etc/sudoers.d/${USER} && \
    runuser --login - ${USER} /bin/bash -c "xdg-user-dirs-update --force"

USER ${UID}:${GID}

WORKDIR ${HOME}/dotfiles

# DEBUG
FROM base AS debug

RUN printf 'make help' >> ${HOME}/.bashrc

COPY --link --chown=${UID}:${GID} . .

ENTRYPOINT ["/bin/bash"]

# Final
FROM base AS final
RUN --mount=type=bind,target=.,readwrite=true \
    --mount=type=cache,target=/var/lib/apt,sharing=locked \
    --mount=type=cache,target=/var/cache/apt,sharing=locked \
    --mount=type=secret,id=GITHUB_TOKEN,env=GITHUB_TOKEN,required=false \
    sudo chown --recursive ${UID}:${GID} ${PWD} && \
    make install
